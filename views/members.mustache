{{>header}}
{{>navigation}}

<div class="row">
  <div class="leftcolumn">
    <div class="card">
      <h2>Members</h2>
      <p>Public users shouldn't be able to see this page.  This page will
         allow logged-in users (members and editors) to create articles.</p>
      {{#message}}
        <p style="color: green;"><strong>{{message}}</strong></p>
      {{/message}}
      <h3>Create an Article</h3>
      <form action="/members/create" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required> <br /> <br />
        <label for="content">Content:</label>
        <textarea id="content" name="content" rows="5" cols="80" required></textarea> <br />
        <input type="submit" value="Create Article">
      </form>
    </div>

    <!-- displaying the articles -->
    <div class="card">
      <h2>Articles</h2>
      {{#articles}}
        <div class="article">
          <h3>{{title}}</h3>
          <p><strong>Author:</strong> {{author}}</p>
          <p>{{content}}</p>
        </div>
        <hr>
      {{/articles}}
    </div>
  </div>

  {{>sidebar}}
</div>

{{>footer}}